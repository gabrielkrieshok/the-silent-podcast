# command 'bundle exec rake build'

# coding: utf-8
require 'jekyll'

# Rake Jekyll tasks
task :build do

  desc 'create a new draft post'

  require 'date'
  require 'active_support/core_ext'

  $i = 0
  $days = 5

  Dir.foreach('_posts') do |f|
    fn = File.join('_posts', f)
    File.delete(fn) if f != '.' && f != '..'
  end

  while $i < $days  do

  slug = "#{Date.today - $i.days}-episode"
  cleanDate = (Date.today - $i.days).strftime("%B %-d, %Y")

  file = File.join(
    File.dirname(__FILE__),
    '_posts',
    slug + '.md'
  )
  

  File.open(file, "w") do |f|
    f << <<-EOS.gsub(/^    /, '')
    ---
    layout: post
    title: "The Silent Podcast â€” #{cleanDate}"
    date: #{Date.today - $i.days} 06:00:00 -0500
    file: "https://thesilentpodcast.s3.amazonaws.com/silent-track.mp3"
    summary: "10 minutes of stillness for #{cleanDate}"
    duration: "10:00"
    explicit: "no"
    keywords: "mindfulness, silence"
    ---
    EOS
  end

  system ("#{ENV['EDITOR']} #{file}")
  puts("Creating Post for #{cleanDate}")

  $i +=1
end

  puts 'Building site...'
  Jekyll::Commands::Build.process(profile: true)
end
